/* pages/success/success.wxss */
page{
  height : auto;
}
.container{
  height : 100%;
  background-color: #f1f1f1;
}
.pay-success{
  height : 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pay-success .tips{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 70rpx;
}
.pay-success image{
  width: 80rpx;
  height: 80rpx;
}
.pay-success text{
  color : #444;
  margin-top: 10rpx;
}
.pay-success .back{
  background-color: #FEBE1B;
  color : #fff;
  padding: 15rpx 40rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}


.list{
  flex : 1;
  display: flex;
  flex-direction: column; 
}
.list .list-title{
  height : 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
  color : #444;
  background-color: #fff;
}
.list .list-title text{
  color : #f60;
  padding:0 20rpx;
}
.list-item{
  padding:20rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.list-item .cover{
  width: 100%;
  height:300rpx;
}
.list-item .title{
  color : #444;
  font-size: 36rpx;
  margin-top: 10rpx;
}
.list-item .price{
  color : #f60;
  font-size: 40rpx;
  margin-top: 10rpx;
}
.list-item .other{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  align-items: center;

}
.list-item .other .sales{
  color : #555;
}
.list-item .other .now{
  background-color: #f60;
  display: flex;
  align-items: center;
  justify-content: center;
  padding:15rpx 40rpx;
  border-radius: 10rpx;
  color : #fff;
}